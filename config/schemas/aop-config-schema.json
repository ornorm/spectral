{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AopConfig",
  "type": "object",
  "properties": {
    "pointcuts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "expression": { "type": "string" }
        },
        "required": ["id", "expression"]
      }
    },
    "aspects": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "ref": { "type": "string" },
          "order": { "type": "number" },
          "pointcuts": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },
                "expression": { "type": "string" }
              },
              "required": ["id", "expression"]
            }
          },
          "advices": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": { "type": "string" },
                "pointcutRef": { "type": "string" },
                "pointcut": { "type": "string" },
                "method": { "type": "string" },
                "returning": { "type": "string" },
                "throwing": { "type": "string" },
                "argNames": { "type": "string" }
              },
              "required": ["type", "method"]
            }
          }
        },
        "required": ["id", "ref", "advices"]
      }
    },
    "advisors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "advice": {
            "type": "object",
            "properties": {
              "type": { "type": "string" },
              "pointcutRef": { "type": "string" },
              "pointcut": { "type": "string" },
              "method": { "type": "string" },
              "returning": { "type": "string" },
              "throwing": { "type": "string" },
              "argNames": { "type": "string" }
            },
            "required": ["type", "method"]
          },
          "pointcut": {
            "oneOf": [
              {
                "type": "object",
                "properties": {
                  "id": { "type": "string" },
                  "pattern": { "type": "string" }
                },
                "required": ["id", "pattern"]
              },
              {
                "type": "object",
                "properties": {
                  "id": { "type": "string" },
                  "isRuntime": { "type": "boolean" },
                  "pattern": { "type": "string" }
                },
                "required": ["id", "isRuntime", "pattern"]
              }
            ]
          }
        },
        "required": ["id", "advice", "pointcut"]
      }
    },
    "proxyTargetClass": { "type": "boolean" },
    "useAspectJ": { "type": "boolean" },
    "frozen": { "type": "boolean" },
    "exposeProxy": { "type": "boolean" }
  },
  "required": ["aspects"]
}
