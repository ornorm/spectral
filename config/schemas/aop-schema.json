{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Spring AOP Schema",
  "type": "object",
  "properties": {
    "beans": {
      "type": "object",
      "properties": {
        "bean": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/bean"
          }
        }
      },
      "required": ["bean"]
    },
    "context": {
      "type": "object",
      "properties": {
        "component-scan": {
          "type": "object",
          "properties": {
            "base-package": {
              "type": "string",
              "description": "The base package for component scanning."
            }
          },
          "required": ["base-package"]
        },
        "annotation-config": {
          "type": "boolean",
          "description": "Enable annotation-driven configuration."
        },
        "property-placeholder": {
          "type": "object",
          "properties": {
            "location": {
              "type": "string",
              "description": "The location of the properties file."
            }
          },
          "required": ["location"]
        },
        "load-time-weaver": {
          "type": "object",
          "description": "Enable the Spring Frameworkâ€™s LTW support.",
          "properties": {
            "class": {
              "type": "string",
              "description": "The class name of the LoadTimeWeaver implementation."
            },
            "weaver-class": {
              "type": "string",
              "description": "The fully qualified class name of the LoadTimeWeaver implementation."
            }
          },
          "required": ["class", "weaver-class"]
        },
        "spring-configured": {
          "type": "object",
          "description": "Enable AspectJ to dependency inject domain objects with Spring."
        },
        "mbean-export": {
          "type": "object",
          "description": "Enable annotation-based MBean export."
        }
      },
      "required": ["component-scan", "annotation-config", "property-placeholder", "load-time-weaver", "spring-configured", "mbean-export"]
    },
    "aop": {
      "type": "object",
      "properties": {
        "config": {
          "type": "object",
          "properties": {
            "proxy-target-class": {
              "type": "boolean",
              "description": "Enable proxying of target classes."
            }
          }
        },
        "aspectj-autoproxy": {
          "type": "object",
          "properties": {
            "proxy-target-class": {
              "type": "boolean",
              "description": "Enable proxying of target classes."
            },
            "expose-proxy": {
              "type": "boolean",
              "description": "Make the current proxy available to the AOP framework."
